{
  "name": "functions",
  "scripts": {
    "downloadEmulators": "firebase init emulators",
    "emulate": "firebase emulators:start --only functions,firestore",
    "lint": "eslint --fix --ext .js,.ts .",
    "lint:fix": "eslint --fix --ext .js,.ts .",
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "export FIRESTORE_EMULATOR_HOST=localhost:8080 && jest",
    "test:watch": "export FIRESTORE_EMULATOR_HOST=localhost:8080 && jest --watch",
    "test:ci": "firebase emulators:exec --only functions,firestore \"npm run test\""
  },
  "engines": {
    "node": "16"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase": "^9.6.11",
    "firebase-admin": "^9.8.0",
    "firebase-functions": "^3.20.1",
    "node-fetch": "^2.6.7"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@firebase/rules-unit-testing": "^2.0.2",
    "@tsconfig/recommended": "^1.0.1",
    "@types/jest": "^27.4.1",
    "@types/node-fetch": "^2.6.1",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.8.0",
    "babel": "^6.23.0",
    "eslint": "^7.6.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.22.0",
    "firebase-functions-test": "^0.2.0",
    "jest": "^27.5.1",
    "ts-node": "^10.7.0",
    "typescript": "^3.8.0"
  },
  "private": true
}
